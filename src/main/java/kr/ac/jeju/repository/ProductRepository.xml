<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.ac.jeju.repository.ProductRepository">
	<select id="findAll" resultType="Product" >
		select 
			*
		from product
	</select>
	
	<insert id="insert" parameterType="Product">
		insert into product(title, price, provider, explanation) values(#{title}, #{price}, #{provider}, #{explanation})
	</insert>
	
	<delete id="delete">
		delete
		from product
		where id = #{id}
	</delete>
	
	<select id="findById" resultType="Product">
		select 
			*
		from product where id = #{id}
	</select>

	<update id="update" parameterType="Product"> 
		update product set title=#{title}, price=#{price}, explanation=#{explanation} where id = #{id}
	</update>
</mapper>